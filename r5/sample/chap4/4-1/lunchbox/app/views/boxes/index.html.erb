<p id="notice"><%= notice %></p>

<h1>お弁当の一覧</h1>

<table>
  <thead>
    <tr>
      <th>品目</th>
      <th>価格</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boxes.each do |box| %>
      <tr>
        <td><%= box.name %></td>
        <td><%= box.price %></td>
        <td>(<%= link_to '詳細', box %></td>
        <td><%= link_to '編集', edit_box_path(box) %></td>
        <td><%= link_to '削除', box, method: :delete, data: { confirm: '削除してもいいですか?' } %>)</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

