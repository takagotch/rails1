<%= form_for(box) do |f| %>
  <% if box.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(box.errors.count, "error") %> prohibited this box from being saved:</h2>

      <ul>
      <% box.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label '名前' %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label '識別名' %>
    <%= f.text_field :tagname %>
  </div>

  <div class="field">
    <%= f.label '価格' %>
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <%= f.label '内容' %>
    <%= f.text_area :content, cols:40, rows:6 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
