<p id="notice"><%= notice %></p>

<h2><%=Date.today.to_s %></h2>
<h1>今日の注文状況</h1>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>注文者</th>
      <th>品目</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.orderdate %></td>
        <td><%= order.member.name %></td>
        <td><%= order.box.name %></td>
        <td><%= link_to '詳細', order %></td>
        <td><%= link_to '編集', edit_order_path(order) %></td>
        <td><%= link_to '削除', order, method: :delete, data: { confirm: '削除していいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

