<h1><%=@member.name %>さんの注文一覧</h1>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>品目</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.orderdate %></td>
        <td><%= order.box.name %></td>
        <td>(<%= link_to '詳細', order %>)</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規注文', new_order_path(member_id:@member.id) %> | <%= link_to '作業メニューへ', workmenu_path %>
