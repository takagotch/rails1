<% unless System.enable_ruby_cards  %>
  Ruby cards disabled
<% else %>
  <%  
  begin
	  s = Sandbox.new(4, request.instance_variable_get('@env'))
	  s.fuehreAus( slot.render( :raw_content ))
	  result = if s.securityViolationDetected
	      s.securityViolationText.message
	    elsif s.syntaxErrorDetected
	      s.syntaxErrorText.message
	    else
	      s.sandboxOutput.value.to_s
	    end     
	rescue Exception => e
	  result = e.message
	end
	%>
	<%= result %>
<% end %>