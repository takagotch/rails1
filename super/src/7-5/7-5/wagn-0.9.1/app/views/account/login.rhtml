<div id="sign-in" class="content">
  <div class="headroom">
    <h1>Sign In</h1>
    <div class="instruction">
  	  <p>Currently membership is by invitation.
         New users may <%= link_to 'Request an Invitation', :action=>'invitation_request' %>.</p>
    </div>
  </div>
	
  <% form_tag :action=>'login' do %>
  <p><label for="login">Email</label></p>
  <p><%= text_field_tag 'login', params[:login] %></p>
  <p><label for="password">Password</label></p>
  <p><%= password_field_tag 'password' %></p>
  <p><%= submit_tag 'Sign me in' %></p>
  <% end %>
  <br/>
	                                       
	
  <h2>Forgot your password?</h2>
  <%= error_messages_for 'user' %>

  <% form_tag :action=>'forgot_password' do %>
  <p><label for="email">Email</label></p>
  <p><%= text_field_tag 'email', params[:email] %></p>

  <p><%= submit_tag 'Reset my password' %></p>
  <% end %>




</div>