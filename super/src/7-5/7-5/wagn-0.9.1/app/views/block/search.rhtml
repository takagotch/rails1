<h1>Search</h1>

<%= render :partial=>'block/options' %>

<div id="search-list" class="card-list"></div>

<script>
  function init_lister() {
    lister = new Wagn.Lister('search-list');
    lister.display_type('search_list');
    lister.keyword( '<%= params[:keyword] %>');
    // FIXME -- keyword needs escaping!!
    lister.query('search');
    lister.sort_by('relevance');
    return lister;
  }
</script>
