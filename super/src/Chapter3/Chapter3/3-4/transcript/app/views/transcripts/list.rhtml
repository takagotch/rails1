<h1>Listing transcripts</h1>

<table>
  <tr>
  <% for column in Transcript.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for transcript in @transcripts %>
  <tr>
  <% for column in Transcript.content_columns %>
    <td><%=h transcript.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => transcript %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => transcript %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => transcript }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @transcript_pages.current.previous } if @transcript_pages.current.previous %>
<%= link_to 'Next page', { :page => @transcript_pages.current.next } if @transcript_pages.current.next %> 

<br />

<%= link_to 'New transcript', :action => 'new' %>
