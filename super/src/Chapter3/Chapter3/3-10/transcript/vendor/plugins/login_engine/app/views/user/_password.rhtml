<div class="user_password">
  <table>
    <%= form_input :password_field, "パスワード", "password", :size => 30 %>
    <%= form_input :password_field, "パスワード(確認用)", "password_confirmation", :size => 30 %>
    <% if submit %>
      <%= form_input :submit_button, 'パスワードを変更する' %>
    <% end %>
  </table>
</div>         
